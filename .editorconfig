# EditorConfig helps developers define and maintain consistent coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf

indent_style = space
indent_size = 4

trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_size = 4
trim_trailing_whitespace = false

[Makefile]
end_of_line = lf
indent_style = tab

[*.py]
charset = utf-8
max_line_length = 200

[*.mk] # Make these match what we have in .gitattributes
end_of_line = lf
indent_style = tab

[*.sh]
end_of_line = lf
